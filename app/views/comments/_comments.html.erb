<div class="col-sm-10 offset-sm-1">
  <div class="comment-form">
    <h3>コメント</h3>
      <ul class="list-unstyled">
        <% comments.each do |comment| %>
        <li class="media">
          <% if comment.user.icon? %>
            <%= image_tag comment.user.icon.thumb.url, class: "user-icon" %>
          <% else %>
            <%= image_tag "/assets/default.jpg", size: "70x70", class: "user-icon" %>
          <% end %>
          <div class="media-body">
            <div class="ml-4">
              <%= link_to comment.user.name, user_path(comment.user) %>
            </div>
            <div class="balloon">
              <p><%= comment.content %></p>
            </div>
            <% if current_user == comment.user %>
              <%= link_to "削除", comment, method: :delete, class: 'btn btn-danger ml-4' %>
            <% end %>
          </div>
        </li>
        <% end %>
      </ul>
  </div>
</div>