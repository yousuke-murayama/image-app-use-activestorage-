<h1>投稿</h1>

<div class="col-sm-4">
  <%= form_with(model: @post, local: true) do |f| %>
    <div>
      <%= f.label :spot, '場所' %>
      <%= f.text_field :spot %>
    </div>
    <div>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="btn-group">
      <%= f.submit '送信', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>