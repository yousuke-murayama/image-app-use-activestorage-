<h1>投稿</h1>

<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <%= form_with(model: @post, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <button type="button" class="btn btn-outline-secondary rounded-pill mb-4">
        <%= f.file_field :image, id: "preview" %>
      </button>
      
      <% if @post.image? %>
        <%= image_tag @post.image.url, size: "300x300", class: "preview_image" %>
      <% else %>
        <%= image_tag "/assets/no-image.png", size: "300x300", class: "preview_image" %>
      <% end %>
      
      <div class="form-group">
  
        <%= f.label :spot, '場所' %>
        <%= f.text_field :spot, class: 'form-control' %>
       
        <%= f.label :content, "コメント" %>
        <%= f.text_area :content, placeholder: "コメント", class: 'form-control', rows: 5 %>
      </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>