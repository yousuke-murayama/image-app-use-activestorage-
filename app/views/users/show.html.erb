<div class="user-data">
  <% if @user.icon? %>
    <%= image_tag @user.icon.thumb.url, class: "user-icon" %>
  <% else %>
    <%= image_tag "/assets/default.jpg", size: "70x70", class: "user-icon" %>
  <% end %>
  <h3>ユーザ名：<%= @user.name %></h3>
</div>
<p class="user-profile">プロフィール：<%= @user.profile %></p>

<%= render 'posts/posts', posts: @posts %>